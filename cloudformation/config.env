# Aurora Blue/Green Test Environment Configuration
# 复制为 config.local.env 并修改

# 基础配置
STACK_NAME=aurora-bg-test
REGION=us-east-1

# VPC 配置
USE_EXISTING_VPC=true
VPC_ID=                       # 留空自动使用默认 VPC

# 数据库配置
DB_USERNAME=admin
DB_PASSWORD=                  # 必填！
DB_NAME=testdb
INSTANCE_CLASS=db.t3.medium

#==============================================================================
# 集群配置 - 核心参数
#==============================================================================
CLUSTER_COUNT=1               # 创建几个集群 (1-3)
INSTANCES_PER_CLUSTER=2       # 每个集群几个实例 (1-3)
ENGINE_VERSION=8.0.mysql_aurora.3.04.2    # Aurora 版本
TARGET_VERSION=8.0.mysql_aurora.3.10.3    # 蓝绿升级目标版本
