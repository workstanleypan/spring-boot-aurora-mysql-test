# Aurora Blue/Green Test Environment Configuration
# Copy to config.local.env and modify

# Basic configuration
STACK_NAME=aurora-bg-test
REGION=us-east-1

# VPC configuration
USE_EXISTING_VPC=true
VPC_ID=                       # Leave empty to auto-detect default VPC

# Database configuration
DB_USERNAME=admin
DB_PASSWORD=YourPassword123                  # Required!
DB_NAME=testdb

#==============================================================================
# Instance Class Configuration
#==============================================================================
# Blue (Source) cluster - production workload
BLUE_INSTANCE_CLASS=db.r6g.large

# Green (Target) cluster - use larger instance for faster binlog catchup
# Recommended: Use same or larger than Blue for faster switchover
GREEN_INSTANCE_CLASS=db.r8g.2xlarge

#==============================================================================
# Cluster configuration - Core parameters
#==============================================================================
CLUSTER_COUNT=3               # Number of clusters to create (1-3)
INSTANCES_PER_CLUSTER=2       # Instances per cluster (1-3)
ENGINE_VERSION=8.0.mysql_aurora.3.08.2    # Aurora version
TARGET_VERSION=8.0.mysql_aurora.3.10.3    # Blue/Green upgrade target version
